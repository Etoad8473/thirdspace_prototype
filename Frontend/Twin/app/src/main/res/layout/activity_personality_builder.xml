<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/peach_pink"
    tools:context=".PersonalityBuilder">

    <TextView
        android:id="@+id/personalityBuilderTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Build Your Personality"
        android:textSize="30sp"
        android:textStyle="italic"
        android:textColor="@color/white"
        android:background="@color/maroon_pink"/>

    <ScrollView
        android:id="@+id/personalityBuilder_scrollView"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:layout_marginTop="40dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/hobbiesTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:labelFor="@+id/accountDetailsLayout"
                android:text="Hobbies / Interests"
                app:layout_constraintTop_toTopOf="@+id/hobbiesLayout"
                android:textSize="27sp"
                android:textStyle="bold"/>

            <LinearLayout
                android:id="@+id/hobbiesLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@+id/hobbiesTitle">

                <RelativeLayout
                    android:id="@+id/hobbiesSelectionLayout"
                    android:layout_width="match_parent"
                    android:layout_height="240dp"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/sportsHobbiesButton"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginLeft="10dp"
                        android:textSize="12sp"
                        android:text="Sports"
                        android:background="@color/red_grey"/>

                    <Button
                        android:id="@+id/bikingHobbiesButton"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginLeft="105dp"
                        android:background="@color/red_grey"
                        android:text="Biking"
                        android:textSize="12sp" />

                    <Button
                        android:id="@+id/gardeningHobbiesButton"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginLeft="199dp"
                        android:textSize="12sp"
                        android:text="Gardening"
                        android:background="@color/red_grey"/>

                    <Button
                        android:id="@+id/bakingHobbiesButton"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginLeft="293dp"
                        android:textSize="12sp"
                        android:text="Baking"
                        android:background="@color/red_grey"/>

                    <Button
                        android:id="@+id/archeryHobbiesButton"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginTop="40dp"
                        android:layout_marginLeft="10dp"
                        android:textSize="12sp"
                        android:text="Archery"
                        android:background="@color/red_grey"/>

                    <Button
                        android:id="@+id/singingHobbiesButton"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginTop="40dp"
                        android:layout_marginLeft="105dp"
                        android:background="@color/red_grey"
                        android:text="Singing"
                        android:textSize="12sp" />

                    <Button
                        android:id="@+id/bloggingHobbiesButton"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginTop="40dp"
                        android:layout_marginLeft="199dp"
                        android:textSize="12sp"
                        android:text="Blogging"
                        android:background="@color/red_grey"/>

                    <Button
                        android:id="@+id/bowlingHobbiesButton"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginTop="40dp"
                        android:layout_marginLeft="293dp"
                        android:textSize="12sp"
                        android:text="Bowling"
                        android:background="@color/red_grey"/>

                    <Button
                        android:id="@+id/photographyHobbiesButton"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginTop="80dp"
                        android:layout_marginLeft="10dp"
                        android:textSize="12sp"
                        android:text="Photography"
                        android:background="@color/red_grey"/>

                    <Button
                        android:id="@+id/cookingHobbiesButton"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginTop="80dp"
                        android:layout_marginLeft="105dp"
                        android:background="@color/red_grey"
                        android:text="Cooking"
                        android:textSize="12sp" />

                    <Button
                        android:id="@+id/readingHobbiesButton"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginTop="80dp"
                        android:layout_marginLeft="199dp"
                        android:textSize="12sp"
                        android:text="Reading"
                        android:background="@color/red_grey"/>

                    <Button
                        android:id="@+id/travelHobbiesButton"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginTop="80dp"
                        android:layout_marginLeft="293dp"
                        android:textSize="12sp"
                        android:text="Travel"
                        android:background="@color/red_grey"/>

                    <Button
                        android:id="@+id/artHobbiesButton"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginTop="120dp"
                        android:layout_marginLeft="10dp"
                        android:textSize="12sp"
                        android:text="Art"
                        android:background="@color/red_grey"/>

                    <Button
                        android:id="@+id/potteryHobbiesButton"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginTop="120dp"
                        android:layout_marginLeft="105dp"
                        android:background="@color/red_grey"
                        android:text="Pottery"
                        android:textSize="12sp" />

                    <Button
                        android:id="@+id/hikingHobbiesButton"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginTop="120dp"
                        android:layout_marginLeft="199dp"
                        android:textSize="12sp"
                        android:text="Hiking"
                        android:background="@color/red_grey"/>

                    <Button
                        android:id="@+id/fishingHobbiesButton"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginTop="120dp"
                        android:layout_marginLeft="293dp"
                        android:textSize="12sp"
                        android:text="Fishing"
                        android:background="@color/red_grey"/>

                    <Button
                        android:id="@+id/paintingHobbiesButton"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginTop="160dp"
                        android:layout_marginLeft="10dp"
                        android:textSize="12sp"
                        android:text="Painting"
                        android:background="@color/red_grey"/>

                    <Button
                        android:id="@+id/danceHobbiesButton"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginTop="160dp"
                        android:layout_marginLeft="105dp"
                        android:background="@color/red_grey"
                        android:text="Dance"
                        android:textSize="12sp" />

                    <Button
                        android:id="@+id/musicHobbiesButton"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginTop="160dp"
                        android:layout_marginLeft="199dp"
                        android:textSize="12sp"
                        android:text="Music"
                        android:background="@color/red_grey"/>

                    <Button
                        android:id="@+id/woodworkingHobbiesButton"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginTop="160dp"
                        android:layout_marginLeft="293dp"
                        android:textSize="12sp"
                        android:text="Woodworking"
                        android:background="@color/red_grey"/>

                    <Button
                        android:id="@+id/yogaHobbiesButton"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginTop="200dp"
                        android:layout_marginLeft="10dp"
                        android:textSize="12sp"
                        android:text="Yoga"
                        android:background="@color/red_grey"/>

                    <Button
                        android:id="@+id/calligraphyHobbiesButton"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginTop="200dp"
                        android:layout_marginLeft="105dp"
                        android:background="@color/red_grey"
                        android:text="Calligraphy"
                        android:textSize="12sp" />

                    <Button
                        android:id="@+id/chessHobbiesButton"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginTop="200dp"
                        android:layout_marginLeft="199dp"
                        android:textSize="12sp"
                        android:text="Chess"
                        android:background="@color/red_grey"/>

                    <Button
                        android:id="@+id/knittingHobbiesButton"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginTop="200dp"
                        android:layout_marginLeft="293dp"
                        android:textSize="12sp"
                        android:text="Knitting"
                        android:background="@color/red_grey"/>


                </RelativeLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/viewSelected"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Selected"
                android:textSize="23sp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Demographics"
                android:textSize="27sp"
                android:textStyle="bold"/>

            <LinearLayout
                android:id="@+id/demographicsLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/linearLayout_age"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:labelFor="@id/editprofilewindows_aboutMe"
                        android:text="Age"
                        android:textStyle="italic"
                        android:textSize="25sp" />

                    <EditText
                        android:id="@+id/ageEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        android:textSize="23sp"
                        android:textColor="@color/black"
                        android:textAlignment="textStart" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout_ethnicity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:labelFor="@id/ethnicityEditText"
                        android:text="Ethnicity"
                        android:textStyle="italic"
                        android:textSize="25sp" />

                    <EditText
                        android:id="@+id/ethnicityEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        android:textSize="23sp"
                        android:textColor="@color/black"
                        android:textAlignment="textStart" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout_sexuality"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:labelFor="@id/editprofilewindows_aboutMe"
                        android:text="Sexuality"
                        android:textStyle="italic"
                        android:textSize="25sp" />

                    <EditText
                        android:id="@+id/sexualityEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        android:textSize="23sp"
                        android:textColor="@color/black"
                        android:textAlignment="textStart" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Location"
                        android:textStyle="italic"
                        android:textSize="25sp" />

                    <EditText
                        android:id="@+id/locationEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        android:textSize="23sp"
                        android:textColor="@color/black"
                        android:textAlignment="textStart" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout_mobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Mobile"
                        android:textStyle="italic"
                        android:textSize="25sp" />

                    <EditText
                        android:id="@+id/mobileEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        android:textSize="23sp"
                        android:textColor="@color/black"
                        android:textAlignment="textStart" />
                </LinearLayout>

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:labelFor="@+id/userDetailsLayout"
                android:text="Goals"
                app:layout_constraintTop_toTopOf="@+id/userDetailsLayout"
                android:textSize="27sp"
                android:textStyle="bold"/>
            <LinearLayout
                android:id="@+id/interestLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/linearLayout_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">


                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/linearLayout_aboutMe"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout_name"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:labelFor="@id/editprofilewindows_aboutMe"
                        android:text="@string/aboutMe_label"
                        android:textSize="25sp" />

                    <EditText
                        android:id="@+id/editprofilewindows_aboutMe"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        android:textSize="23sp"
                        android:textColor="@color/black"
                        android:textAlignment="textStart"
                        tools:layout_editor_absoluteX="-28dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout_interest"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout_aboutMe"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:labelFor="@id/editprofilewindows_interest"
                        android:text="@string/interest_label"
                        android:textSize="25sp" />

                    <EditText
                        android:id="@+id/editprofilewindows_interest"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        android:textSize="23sp"
                        android:textColor="@color/black"
                        android:textAlignment="textStart"
                        tools:layout_editor_absoluteX="-28dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout_gender"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout_interest"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:labelFor="@id/editprofilewindows_gender"
                        android:text="@string/gender_label"
                        android:textSize="25sp" />

                    <EditText
                        android:id="@+id/editprofilewindows_gender"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        android:textSize="23sp"
                        android:textColor="@color/black"
                        android:textAlignment="textStart"
                        tools:layout_editor_absoluteX="-28dp" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/personalityDoneButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Done"
        android:textSize="23sp"
        android:textStyle="bold"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="650dp"/>



</RelativeLayout>